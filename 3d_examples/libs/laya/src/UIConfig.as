package  {

	/**
	 * 全局配置
	 */
	public class UIConfig {

		/**
		 * 是否开启触摸滚动（针对滚动条）
		 */
		public static var touchScrollEnable:Boolean;

		/**
		 * 是否开启滑轮滚动（针对滚动条）
		 */
		public static var mouseWheelEnable:Boolean;

		/**
		 * 是否显示滚动条按钮
		 */
		public static var showButtons:Boolean;

		/**
		 * 弹出框背景颜色
		 */
		public static var popupBgColor:String;

		/**
		 * 弹出框背景透明度
		 */
		public static var popupBgAlpha:Number;

		/**
		 * 模式窗口点击边缘，是否关闭窗口，默认是关闭的
		 */
		public static var closeDialogOnSide:Boolean;
	}

}
